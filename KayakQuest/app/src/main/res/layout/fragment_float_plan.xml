<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Kayaker Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:text="@string/kayaker_information"
            android:textColor="#FF333333"
            android:textSize="25sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:hintTextColor="#FF666666"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/paddler_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:hint="@string/paddler_name_hint"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF666666" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="8dp"
            android:text="@string/gender"
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/gender_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:background="@android:drawable/btn_dropdown"
            android:minHeight="48dp"
            android:prompt="@string/gender_dropdown"
            android:spinnerMode="dropdown" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:hintTextColor="#FF666666"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="phone"
                android:digits="0123456789"
                android:hint="@string/phone_number_hint"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:maxLength="15"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF666666" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:hintTextColor="#FF666666"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/age_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="birthDateYear"
                android:digits="0123456789"
                android:hint="@string/age_hint"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="3"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF666666" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:hintTextColor="#FF666666"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="postalAddress"
                android:hint="@string/address_hint"
                android:inputType="textPostalAddress"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF666666" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:hintTextColor="#FF666666"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="addressCity"
                android:hint="@string/city_hint"
                android:inputType="textPostalAddress"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF666666" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="8dp"
            android:text="@string/state"
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/state_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:background="@android:drawable/btn_dropdown"
            android:minHeight="48dp"
            android:prompt="@string/state_dropdown"
            android:spinnerMode="dropdown" />

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#FFCCCCCC" />

        <!-- Emergency Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:text="@string/emergency_information"
            android:textColor="#FF333333"
            android:textSize="25sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:hintTextColor="#FF666666"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emergency_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:hint="@string/emergency_contact_hint"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF666666" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:hintTextColor="#FF666666"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emergency_phone_number_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="phone"
                android:digits="0123456789"
                android:hint="@string/emergency_phone_number_hint"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:maxLength="15"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF666666" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#FFCCCCCC" />

        <!-- Kayak Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:text="@string/description_of_kayak"
            android:textColor="#FF333333"
            android:textSize="25sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:hintTextColor="#FF666666"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/kayak_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="deviceModel"
                android:hint="@string/kayak_make_hint"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF666666" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:hintTextColor="#FF666666"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/kayak_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="deviceModel"
                android:hint="@string/kayak_model_hint"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF666666" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:hintTextColor="#FF666666"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/kayak_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="quantity"
                android:digits="0123456789"
                android:hint="@string/kayak_length_hint"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="3"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF666666" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/kayak_color"
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/kayak_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:background="@android:drawable/btn_dropdown"
            android:minHeight="48dp"
            android:prompt="@string/kayak_dropdown"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/safety_equipment_notes"
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:hintTextColor="#FF666666"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/safety_text_area"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:autofillHints="notes"
                android:gravity="top|start"
                android:hint="@string/safety_equipment_notes_hint"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:minLines="5"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="#FF000000"
                android:textColorHint="#FF666666" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#FFCCCCCC" />

        <!-- Vehicle Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:text="@string/vehicle_information"
            android:textColor="#FF333333"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:text="@string/vehicle_make"
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/car_make_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:background="@android:drawable/btn_dropdown"
            android:minHeight="48dp"
            android:prompt="@string/car_make_dropdown"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:text="@string/vehicle_model"
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:hintTextColor="#FF666666"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/vehicle_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="licensePlate"
                android:hint="@string/vehicle_model"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF666666" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:text="@string/vehicle_color"
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/car_color_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:background="@android:drawable/btn_dropdown"
            android:minHeight="48dp"
            android:prompt="@string/car_color_dropdown"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:text="@string/plate_number"
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:hintTextColor="#FF666666"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/plate_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="licensePlate"
                android:hint="@string/plate_number_hint"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF666666" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#FFCCCCCC" />

        <!-- Trip Details -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:text="@string/trip_notes"
            android:textColor="#FF333333"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/select_date"
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:text="@string/put_in_location"
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:hintTextColor="#FF666666"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/departure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="addressLocality"
                android:hint="@string/put_in_location_hint"
                android:inputType="textPostalAddress"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF666666" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/estimated_leave_time"
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TimePicker
            android:id="@+id/start_time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:timePickerMode="spinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:text="@string/take_out_location"
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:hintTextColor="#FF666666"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/arrival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="addressLocality"
                android:hint="@string/take_out_location_hint"
                android:inputType="textPostalAddress"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF666666" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/estimated_time_of_return"
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TimePicker
            android:id="@+id/end_time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:timePickerMode="spinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/other_trip_details"
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:hintTextColor="#FF666666"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_area"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:autofillHints="notes"
                android:gravity="top|start"
                android:hint="@string/trip_notes_hint"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:minLines="5"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="#FF000000"
                android:textColorHint="#FF666666" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#FFCCCCCC" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:text="@string/submit"
            app:backgroundTint="#FF6200EE"
            style="@style/Widget.MaterialComponents.Button" />
    </LinearLayout>
</ScrollView>